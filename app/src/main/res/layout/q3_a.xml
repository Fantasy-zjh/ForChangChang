<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image8">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="80px"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="30px"
            android:text="2018年2月5号，在一起的第16天"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:textColor="@color/purple"
            android:textStyle="italic"
            android:layout_marginTop="60px"
            android:text="@string/q3"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1200px"
        android:src="@drawable/friends"
        android:layout_gravity="bottom"/>

    <com.love.gift.forchangchang.snow.FallingView
        android:id="@+id/fallingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.zhy.autolayout.AutoFrameLayout>
